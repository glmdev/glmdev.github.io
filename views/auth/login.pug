  script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
.container-fluid
    .row-centered
        .spacer-120px
        .spacer-120px
        .col-lg-2.col-lg-offset-5#auth-container
            img(src='/image/branding/signature_w.png' width='120px')
            h2 Sign In to Continue.
            each error in errors
                p
                    b(style='color: red;') #{error}
            br
            form#auth-form(role='form' action='/auth/login' method='post')
                if locals.form_data && locals.form_data.username
                    .form-group
                        input.form-control(type='text' name='username' placeholder='Username' value=locals.form_data.username required autofocus)
                else
                    .form-group
                        input.form-control(type='text' name='username' placeholder='Username' required autofocus)
                .form-group
                    input.form-control(type='password' name='password' placeholder='Password' required)
                button.auth-form-submit.btn.pull-right(type='submit' name='submit') Continue
        
        

script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
script(src='/script/index.js')
